<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESalazarExamen.Views.MainPage"
             xmlns:vm="clr-namespace:ESalazarExamen.ViewModels"
             Title="Busqueda de Paises">

    <ContentPage.BindingContext>
        <vm:PaisViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">
        <!-- Entrada para búsqueda de país -->
        <Entry Placeholder="Ingrese el nombre del país"
               Text="{Binding NombreBusqueda}" />

        <!-- Botón para buscar país -->
        <Button Text="Buscar"
                Command="{Binding BuscarPaisCommand}" />

        <!-- ListView para mostrar el país encontrado -->
        <ListView ItemsSource="{Binding PaisList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nombre}" Detail="{Binding Region}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Botón para guardar el país encontrado -->
        <Button Text="Guardar"
                Command="{Binding SavePaisCommand}" />

        <!-- Mensaje de estado -->
        <Label Text="{Binding StatusMessage}" TextColor="Red" />
    </VerticalStackLayout>

</ContentPage>
